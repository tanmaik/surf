generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id        String     @id @unique @default(cuid())
  listeners Listener[]
  tabs      Tab[]
  updatedAt DateTime   @updatedAt
}

model Tab {
  id      String  @id @unique @default(cuid())
  group   Group?  @relation(fields: [groupId], references: [id])
  groupId String?
  url     String  @db.Text
}

model Listener {
  id      String  @id
  group   Group?  @relation(fields: [groupId], references: [id])
  groupId String?
}
